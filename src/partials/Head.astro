---
import { SEO } from "astro-seo";
import { SiteConfig } from "../utils/SiteConfig";
import { type HeadProps } from "../utils/types";
import "../styles/style.css";

const {
  props: { title, description, image },
} = Astro.props as Props;

---
<SEO
    title={title || SiteConfig.title}
    description={description || SiteConfig.description}
    openGraph={{
        basic: {
        title: title || SiteConfig.title,
        type: description || SiteConfig.description,
        image: SiteConfig.site + (image || SiteConfig.image || ""),
        url: SiteConfig.site,
        },
    }}
    twitter={{
        creator: SiteConfig.twitter,
    }}
    extend={{
        link: [{ rel: "icon", href: "/favicon.png" }],
        meta: [
        {
            name: "twitter:image",
            content: SiteConfig.site + (image || SiteConfig.image || ""),
        },
        { name: "twitter:title", content: title || SiteConfig.title },
        {
            name: "twitter:description",
            content: description || SiteConfig.description,
        },
        ],
    }}
/>