---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"

const isActive = (path) => {
    if (path === "" && currentPath === "") {
        return true; // Ativa "Home" somente quando a URL atual é a raiz
    } else if (path !== "" && currentPath.startsWith(path)) {
        return true; // Ativa outras rotas se o currentPath começa com path
    }
    return false;
};
---

<nav class="main-nav">
    <ul>
        <li><a class={isActive("") ? "active" : ""} href="/">Home</a></li>
        <li><a class={isActive("now") ? "active" : ""} href="/now">Now</a></li>
        <li><a class={isActive("labs") ? "active" : ""} href="/labs">Labs</a></li>
        <li><a class={isActive("notes") ? "active" : ""} href="/notes">Notes</a></li>
        <li><a class={isActive("readings") ? "active" : ""} href="/readings">Readings</a></li>
        <li><a href="mailto:dotfernando@gmail.com">Contact</a></li>
    </ul>
</nav>

<style>
    .main-nav {
        width: 100%;
        max-width: max-content;
        transition: .4s;
        padding-top: 2rem;
    }

    ul {
        list-style-type: none;
        max-width: max-content;
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    li {
        border-radius: 10px;
        font-size: .9rem;
        transition: .3s;

        &:hover {
            background-color: var(--menu-hover-bg);
        }
    }

    li a {
        padding: 4px 0;
        width: 100%;
        height: 100%;
        display: inline-block;
        color: var(--text-primary-color);
        transition: .4s;
    }

    @media (hover: hover) {
        .dock-navigation li a:hover {
            transition: .4s;
            color: var(--menu-active-link);
        }
    }

    .active {
        position: relative;
        font-weight: 600;

        &:after {
            content: "";
            width: 3px;
            height: 3px;
            background-color: var(--text-primary-color);
            display: block;
            position: absolute;
            left: -1rem;
            top: 45%;
            margin: 0 auto;
            border-radius: 100%;
        }
    }

    @media (max-width: 780px) {
        .main-nav {
            ul {
                flex-direction: row;
            }

            li {
                margin-right: 16px;
            }

            .active {
                &:after {
                    bottom: 0;
                    left: 0;
                    right: 0;
                    top: 100%;
                }
            }
        }
    }
</style>