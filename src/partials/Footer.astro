---
import Grid from '../components/utils/Grid.astro';
import CopyClipboard from '@components/CopyClipboard/CopyClipboard.jsx';
import { getCommitInfo } from '../utils/commit.ts';

const { commitId, commitDate } = getCommitInfo();

function formatDate(dateString: string) {
  const date = new Date(dateString);
  const month = String(date.getMonth() + 1).padStart(2, '0'); // getMonth() come√ßa do 0
  const day = String(date.getDate()).padStart(2, '0');
  const year = date.getFullYear();
  return `${month}.${day}.${year}`;
}
