---
import FullPage from "./FullPage.astro";
import { Image } from "astro:assets";

const {
    class: className
} = Astro.props;

---
<section class:list={['full-section', className]}>
    <div class="wide-wrap">
        <slot />
    </div>
</section>

{/* define:vars={{ cover: `url("${cover}")` }}  */}

<style is:global>

    .wide-wrap {
        max-width: 100dvw;
        width: 100%;
        margin: 0 auto;
    }

    .scroller-sections {
        -webkit-overflow-scrolling: touch; 
    }

    .scroller-sections section {

    }
    .full-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .full-section img {
        margin: 0 auto;
        display: block;
        width: 100%;
        height: auto;
        object-position: center center;
        object-fit: cover;
        image-rendering: auto;
    }
</style>