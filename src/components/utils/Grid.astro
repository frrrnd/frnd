---
const { isContainer, sm, md, lg } = Astro.props;
const containerClass = isContainer ? "grid-container" : "";
const smClass = sm ? `col-${sm}` : "";
const mdClass = md ? `col-md-${md}` : "";
const lgClass = lg ? `col-lg-${lg}` : "";
const classList = [containerClass, smClass, mdClass, lgClass].join(" ").trim();
---

<div class={classList}>
    <slot />
</div>

<style>
  .grid-container {
      display: grid;
      grid-template-columns: repeat(12, 1fr);
      gap: 16px;
  }

  @media screen and (max-width: 475px) {
    .grid-container {
      gap: 0;
    }
  }

  .col-1 {
    grid-column: span 1;
  }
  .col-2 {
    grid-column: span 2;
  }
  .col-3 {
    grid-column: span 3;
  }
  .col-4 {
